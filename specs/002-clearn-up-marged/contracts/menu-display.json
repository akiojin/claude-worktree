{
  "openapi": "3.0.0",
  "info": {
    "title": "Menu Display Contract",
    "version": "1.0.0",
    "description": "Contract for menu display and interaction"
  },
  "paths": {
    "/menu/display": {
      "get": {
        "summary": "Get menu display configuration",
        "operationId": "getMenuDisplay",
        "responses": {
          "200": {
            "description": "Menu display configuration",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MenuDisplay"
                }
              }
            }
          }
        }
      }
    },
    "/menu/action": {
      "post": {
        "summary": "Execute menu action",
        "operationId": "executeMenuAction",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ActionRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Action executed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ActionResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid action"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MenuDisplay": {
        "type": "object",
        "required": ["message", "actions", "choices"],
        "properties": {
          "message": {
            "type": "string",
            "description": "Menu prompt message"
          },
          "actions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MenuAction"
            },
            "minItems": 1
          },
          "choices": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Choice"
            }
          }
        }
      },
      "MenuAction": {
        "type": "object",
        "required": ["key", "label", "handler", "enabled"],
        "properties": {
          "key": {
            "type": "string",
            "pattern": "^[a-z]$",
            "description": "Single character key"
          },
          "label": {
            "type": "string",
            "minLength": 1,
            "description": "Action display label"
          },
          "handler": {
            "type": "string",
            "enum": ["__create_new__", "__manage_worktrees__", "__cleanup_prs__", "__exit__"],
            "description": "Action handler identifier"
          },
          "enabled": {
            "type": "boolean",
            "description": "Whether action is enabled"
          }
        }
      },
      "Choice": {
        "type": "object",
        "required": ["name", "value"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Display name"
          },
          "value": {
            "type": "string",
            "description": "Selection value"
          },
          "description": {
            "type": "string",
            "description": "Optional description"
          },
          "disabled": {
            "type": "boolean",
            "description": "Whether choice is disabled"
          }
        }
      },
      "ActionRequest": {
        "type": "object",
        "required": ["key"],
        "properties": {
          "key": {
            "type": "string",
            "pattern": "^[a-z]$",
            "description": "Action key to execute"
          }
        }
      },
      "ActionResponse": {
        "type": "object",
        "required": ["success", "handler"],
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Whether action was successful"
          },
          "handler": {
            "type": "string",
            "description": "Handler that was executed"
          },
          "error": {
            "type": "string",
            "description": "Error message if failed"
          }
        }
      }
    }
  }
}